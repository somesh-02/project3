
@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ViewDetails</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.4/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="container text-center">
    <table style="align-content:center;margin-left:auto;margin-right:auto;" border="1" cellpadding="10px" cellspacing="0">
         @foreach (var item in Model)
                {
        <tr>

            <td> <img src="@item.Image" width="100%" height="225" /></td>
        </tr>
            <tr><td><strong>@item.Name</strong></td></tr>
            <tr><td><strong>Brand : </strong>@item.BrandName</td></tr>
            <tr><td><strong>Category : </strong>@item.CategoryName</td></tr>
            <tr><td><strong>Price : </strong>@item.Price</td></tr>
            <tr> <td><strong>Available Quantity : </strong>@item.Quantity</td></tr>
                }
    </table>
    <br />
    <br />
    <a class="btn btn-outline-dark" asp-controller="Product" asp-action="Index">Continue Shopping</a>
    <a asp-controller="Cart" asp-action="Buy" asp-route-id="@Model[0].Id" class="btn btn-outline-dark">Add to Cart</a>
    </div>
</body>
</html>
