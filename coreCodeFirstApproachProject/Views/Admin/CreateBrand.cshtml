@model coreCodeFirstApproachProject.Models.Brand

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CreateBrand</title>
</head>
<body>

<h4>Brand</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateBrand">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BrandAddedDate" class="control-label"></label>
                <input asp-for="BrandAddedDate" class="form-control" />
                <span asp-validation-for="BrandAddedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create Brand" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
        <a asp-action="DisplayBrands">Back to List</a>
</div>

</body>
</html>
